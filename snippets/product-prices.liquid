{% assign main_class = main_class | default: 'c-product' %}

<div class="{{ main_class }}__prices {{ extra_classes | default: '' }}">
    {% if is_in_sale %}
        <p class="{{ main_class }}__price--old">
            <s>{{ product_item.compare_at_price_min | money }}</s>
        </p>
    {% endif %}
    <p class="{{ main_class }}__price">
        {% if product_item.price_min != product_item.price_max %}
            {{ product_item.price_min | money }}
            â€”
            {{ product_item.price_max | money }}
        {% else %}
            {{ product_item.price_min | money }}
        {% endif %}
    </p>
</div>